<h2>植物情報一覧</h2>
    <%= link_to new_admin_plant_path do %>
      <i class="fas fa-plus-circle"></i>
    <% end %>

    <% @plants.each do |plant| %>
      <%= link_to edit_admin_plant_path(plant) do %>
          <%= attachment_image_tag plant, :image, :fill, 200, 200 %>
          <%= plant.plant_name %>
      <% end %>
    <% end %>