<%= form_with model: @plant, url: admin_plants_path, local:true do |f| %>
  <div class="d-flex align-items-center justify-content-center flex-wrap mt-5">
  	<div class="m-2">
  		<div><%= attachment_image_tag @plant, :image, :fill, 300, 300 , fallback: "karasazu_logo.jpg" %></div>
  		<div><%= f.attachment_field :image %></div>
  	</div>
    <div class="align-items-center justify-content-center m-2">
	    <h2>植物情報追加</h2>
		  <table class="table table-border">
	      <tr>
          <td><%= f.label :plant_name, "植物名" %></td>
          <td><%= f.text_field :plant_name %></td>
        </tr>
        <tr>
          <td><%= f.label :frequency, "水やり頻度" %></td>
          <td><%= f.text_field :frequency %>日ごと</td>
        </tr>
        <tr>
          <td><%= f.label :amount, "水量" %></td>
          <td><%= f.text_field :amount %></td>
        </tr>
        <tr>
          <td><%= f.label :recommend_place, "推奨環境" %></td>
          <td><%= f.select :recommend_place, Plant.recommend_places.keys.to_a, {}, class: 'form-control'%></td>
        </tr>
        <tr>
          <td><%= f.label :advice, "育成ポイント" %></td>
          <td><%= f.text_area :advice %></td>
        </tr>
        <tr>
          <td></td>
          <td><%= f.submit '登録する', class: "btn btn-outline-primary" %></td>
        </tr>
      </table>
    </div>
  </div>
<% end %>