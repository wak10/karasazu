<!DOCTYPE html>
<html>
  <head>
    <title>karasazu</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <script src="https://kit.fontawesome.com/c4cc096aed.js" crossorigin="anonymous"></script>
  </head>

  <body>
    <header>
      <% if user_signed_in? %>
      <div>
        <%=link_to top_path do %>
          <%= image_tag 'logo_top.jpg'%>
        <% end %>
      </div>

    <table>
        <ul>
          <li><span>ユーザー名:</span><%= current_user.name %></li>
          <li>
            <%= link_to "マイページ", users_path %>
          </li>
          <li>
            <%= link_to "ログアウト", destroy_user_session_path, method: :delete %>
          </li>
        </ul>
      <% elsif admin_signed_in? %>
        <%=link_to admin_plants_path do %>
          <%= image_tag 'logo_top.jpg'%>
        <% end %>
        <ul>
          <li><%= Admin.name %></li>
          <li>
            <%= link_to "ログアウト", destroy_admin_session_path, method: :delete %>
          </li>
        </ul>
      <% else %>
        <%=link_to root_path do %>
          <%= image_tag 'logo_top.jpg'%>
        <% end %>
        <ul>
          <li><%= link_to "ログイン", new_user_session_path %></li>
          <li><%= link_to "新規登録", new_user_registration_path %></li>
        </ul>
      <% end %>
    </header>
    <main>
      <%= notice %>
      <%= yield %>
    </main>
  </body>
</html>
