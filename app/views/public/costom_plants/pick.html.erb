<%= form_with model: @grow_plant_new, url: costom_plants_path, local: true do |f| %>
  <div class="d-flex align-items-center justify-content-center flex-wrap mt-5">
    <div class="m-2">
      <%= attachment_image_tag @costom_plant, :image, :fill, 200, 200 %></br >
      <%#= f.attachment_field :image %>
    </div>
    <div class="align-items-center justify-content-center">
      <h2>育成植物選択</h2>
      <table class="table table-border">
        <tr>
          <td>植物名</td>
          <td><%= @costom_plant.plant_name %></td>
        </tr>
        <tr>
          <td><%= f.label :nick_name, "愛称" %></td>
          <td><%= f.text_field :nick_name %></td>
        </tr>
        <tr>
          <td><%= f.label :place, "育成環境" %></td>
          <td>
            <%= f.select :place, GrowPlant.places.keys.to_a, {}, class: 'form-control'%>
          </td>
        </tr>
        <tr>
          <td></td>
          <td class="text-right"><%= f.submit "育成中へ登録する", class: "btn btn-outline-primary" %></td>
        </tr>
      </table>
    </div>
  </div>
  <%= f.hidden_field :costom_plant_id, value: @costom_plant.id %>
  <%= f.hidden_field :user_id, value: current_user.id %>
  <%= f.hidden_field :image, value: @costom_plant.image %>
<% end %>