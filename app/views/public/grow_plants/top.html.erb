          <%= link_to grow_plant_path(@sunny_place[3]) do %>
            <%= attachment_image_tag @sunny_place[3], :image, :fill, 50, 50 %>
          <% end %>
        </div>
      <% end %>
      <% if @sunny_place[4] %>
        <div id="sunny-icon4">
          <%= link_to grow_plant_path(@sunny_place[4]) do %>
            <%= attachment_image_tag @sunny_place[4], :image, :fill, 50, 50 %>
          <% end %>
        </div>
      <% end %>
      <% if @half_sunny_place[0] %>
