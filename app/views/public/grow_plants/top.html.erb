          <%= link_to grow_plant_path(@sunny_place[2]) do %>
            <%= attachment_image_tag @sunny_place[2], :image, :fill, 50, 50 %>
          <% end %>
        </div>
      <% end %>
      <% if @sunny_place[3] %>
