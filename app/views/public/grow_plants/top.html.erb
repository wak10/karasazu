<div class="d-flex above around">
  <div class="col-2 none"></div>
  <h1 class=" m-auto none">育成中植物一覧</h1>
  <div class="col-2 d-flex">
    <%= link_to grow_plants_path do %>
      <i class="fas fa-plus-circle fa-3x"></i>
    <% end %>
  </div>
</div>

<div class="d-flex">
  <div class="col side around overflow-auto top-list">
    <% @grow_plants.each do |grow_plant| %>
      <div class="d-flex align-items-center justify-content-center icon">
        <%= link_to grow_plant_path(grow_plant) do %>
          <%= attachment_image_tag grow_plant, :image, :fill, 120, 120 %>
        <% end %>
      </div>
      <div class="d-flex align-items-center justify-content-center">
        <p><%= grow_plant.nick_name %></p>
      </div>
    <% end %>
  </div>
  <div class="col-9 d-flex align-items-center icon-wrapper">
    <%= image_tag 'isometric_drawing.png', class: "isometric none"%>
    <div class="display-icon none">
      <% if @sunny_place[0] %>
        <div id="sunny-icon0">
          <%= link_to grow_plant_path(@sunny_place[0]) do %>
            <%= attachment_image_tag @sunny_place[0], :image, :fill, 50, 50 %>
          <% end %>
        </div>
      <% end %>
      <% if @sunny_place[1] %>
