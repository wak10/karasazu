
  <div class="d-flex above">
    <div class="col-2"></div>
    <h1 class=" m-auto">育成中植物一覧</h1>
    <div class="col-2 d-flex">
      <%= link_to grow_plants_path do %>
        <i class="fas fa-plus-circle fa-3x"></i>
      <% end %>
    </div>
  </div>

  <div class="d-flex align-items-center">
    <div class="col-3 side">
      <h3 class="text-center ">次回水やり</h3>
      <% @grow_plants.each do |grow_plant| %>
        <div class="d-flex align-items-center justify-content-center">
          <%= link_to grow_plant_path(grow_plant) do %>
            <%= attachment_image_tag grow_plant.plant, :image, :fill, 120, 120 %>
          <% end %>
        </div>

        <div class="d-flex align-items-center justify-content-center">
          <h4><%= grow_plant.nick_name %></h4>
        </div>
      <% end %>
    </div>
    <div class="col">
      <%= image_tag 'isometric_drawing.png', class: "room"%>

    </div>
  </div>

