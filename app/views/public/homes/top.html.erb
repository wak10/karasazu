<h2>育成中植物一覧</h2>
    <%= link_to grow_plants_path do %>
      <i class="fas fa-plus-circle fa-3x"></i>
    <% end %>


  <% @grow_plants.each do |grow_plant| %>
    <%= link_to grow_plant_path(grow_plant) do %>
      <%= attachment_image_tag grow_plant.plant, :image, :fill, 200, 200 %>
      <%= grow_plant.nick_name %>
    <% end %>
  <% end %>
