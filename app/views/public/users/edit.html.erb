<div class="container mt-5 d-flex align-items-center justify-content-center wrapper">
  <%= form_with model: @user, url: users_path, local:true do |f| %>
    <div class="d-flex flex-wrap justify-content-center">
	    <%= attachment_image_tag @user, :image, :fill, 200, 200 , fallback: "icon.jpeg", class:"logo" %>
	    <%= f.attachment_field :image %>
    </div>
    <div class="align-items-center justify-content-center mx-3">
	    <h2>マイページ編集</h2>
		  <table class="table table-border">
				<tr>
      		<td><%= f.label :name, "ユーザー名:" %></td>
      		<td><%= f.text_field :name %></td>
     		</tr>
				<tr>
      		<td class="nowrap"><%= f.label :email, "メールアドレス:" %></td>
      		<td><%= f.text_field :email %></td>
     		</tr>
				<tr>
      		<td></td>
      		<td class="text-right"><%= f.submit '更新する', class: "btn btn-outline-primary" %></td>
     		</tr>
			</table>
    </div>
  <% end %>
</div>