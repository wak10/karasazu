<%= form_with model: @user, url: users_path, local:true do |f| %>
<div class="d-flex align-items-center justify-content-center">
  <div>
  	<%= attachment_image_tag @user, :image, :fill, 300, 300 , fallback: "icon.jpeg" %></br >
  	<%= f.attachment_field :image %>
  </div>
   <div class="align-items-center justify-content-center">
			<h2>マイページ編集</h2>
				<table class="table table-borderless">
					<tr>
        		<td><%= f.label :name, "ユーザー名:" %></td>
        		<td><%= f.text_field :name %></td>
       		</tr>
					<tr>
        		<td><%= f.label :email, "メールアドレス:" %></td>
        		<td><%= f.text_field :email %></td>
       		</tr>
					<tr>
        		<td><%= f.submit '更新する', class: "btn btn-outline-primary px-3 py-1" %></td>
        		<td></td>
       		</tr>
				</table>
		</div>
<% end %>