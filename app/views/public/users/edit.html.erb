<h2>マイページ編集</h2>
<%= form_with model: @user, url: users_path, local:true do |f| %>
	<%= attachment_image_tag @user, :image, :fill, 300, 300 , fallback: "icon.jpeg" %>
 	<%= f.attachment_field :image %>
	<%= f.label :name, "ユーザー名:" %>
	<%= f.text_field :name %>
	<%= f.label :email, "メールアドレス:" %>
	<%= f.text_field :email %>
	<%= f.submit '更新する' %>
<% end %>